# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'GameTrooper' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for GameTrooper
  pod 'Firebase/Core'
  pod 'Firebase/Database'
  pod 'Alamofire'
  pod 'SDWebImage'
  pod 'Cosmos'
  pod 'ReachabilitySwift'
  pod 'BRYXBanner'

  target 'GameTrooperTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'GameTrooperUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
